#!/bin/bash

red=`tput setaf 1`
green=`tput setaf 2`
reset=`tput sgr0`

run_test() {
	EXPECT_SCRIPT=$1
	TEST_NAME=$2
	LOG_FILE=${EXPECT_SCRIPT}.log
	sudo EXPECT_SCRIPT="${EXPECT_SCRIPT}" TEST_NAME="${TEST_NAME}" expect -f ${EXPECT_SCRIPT} &> $LOG_FILE
	RC=$?
	if [ $RC == 0 ] ; then
		echo "${green} [OK] ${reset} ${TEST_NAME}"
	else
		echo "${red} [FAIL] ${reset} ${TEST_NAME}"
		echo
		cat $LOG_FILE
		exit $RC
	fi
}

for i in test-*.expect ; do
	run_test $i $i
done
